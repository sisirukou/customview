<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/cffffff">

    <com.customview.view.ShapeView
        android:id="@+id/shapeView"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        android:layout_marginBottom="@dimen/dp80"/>

    <View
        android:id="@+id/shadowView"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp3"
        android:background="@drawable/shape_loading_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:text="@string/view_58city_laoding_text"/>

</LinearLayout>
